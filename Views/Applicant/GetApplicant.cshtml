@model List<OnlineRegistrationForm.Models.Applicant>

<!DOCTYPE html>
<html>
<head>
    <title>All Applicants</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>All Applicants</h1>
        <a href="/Applicant/Index" class="btn btn-primary">New Register</a>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Date of Birth</th>
                        <th>Gender</th>
                        <th>Mobile Number</th>
                        <th>Email Id</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>District</th>
                        <th>State</th>
                        <th>Experience</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var applicant in Model)
                    {
                        <tr>
                            <td>
                                <img src="/uploads/@applicant.ImagePath" style="max-width: 100px; max-height: 100px;" />
                            </td>
                            <td>@applicant.FullName</td>
                            <td>@applicant.DateOfBirth.ToShortDateString()</td>
                            <td>@applicant.Gender</td>
                            <td>@applicant.MobileNo</td>
                            <td>@applicant.Email</td>
                            <td>@applicant.Address</td>
                            <td>@applicant.City</td>
                            <td>@applicant.District</td>
                            <td>@applicant.State</td>
                            <td>@applicant.MonthsOfExperience</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
