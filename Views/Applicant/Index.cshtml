<!DOCTYPE html>
<html>
<head>
    <title>Online Registration Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Online Registration Form</h1>
        <a href="/Applicant/GetApplicant" class="btn btn-primary">Applicant Details</a>

        <form action="/Applicant/Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="FullName">Applicant’s Full Name:</label>
                <input type="text" class="form-control" id="FullName" name="FullName" required>
            </div>
            <!-- Other form fields -->
            <div class="form-group">
                <label for="DateOfBirth">Date of Birth:</label>
                <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" required>
            </div>
            <div class="form-group">
                <label>Gender:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="Male" name="Gender" value="Male">
                    <label class="form-check-label" for="Male">Male</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="Female" name="Gender" value="Female">
                    <label class="form-check-label" for="Female">Female</label>
                </div>
            </div>
            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="email" class="form-control" id="Email" name="Email" pattern="^[a-zA-Z0-9._%+-]" required>
                <div class="invalid-feedback">Please enter a valid Gmail address (example@gmail.com).</div>
            </div>
            <div class="form-group">
                <label for="MobileNo">Mobile No:</label>
                <input type="tel" class="form-control" id="MobileNo" name="MobileNo" pattern="[0-9]{10}" required>
            </div>
            <div class="form-group">
                <label for="MobileNo">Address:</label>
                <input type="tel" class="form-control" id="Address" name="Address" required>
            </div>
            <div class="form-group">
                <label for="MobileNo">City:</label>
                <input type="tel" class="form-control" id="City" name="City" required>
            </div>
            <div class="form-group">
                <label for="MobileNo">District:</label>
                <input type="tel" class="form-control" id="District" name="District" required>
            </div>
            <div class="form-group">
                <label for="State">State:</label>
                <select id="State" name="State" class="form-control" required>
                    <option value="">Select State</option>
                    <option value="Tamilnadu">Tamilnadu</option>
                    <option value="Kerla">Kerla</option>
                    <option value="Karnataka">Karnataka</option>
                </select>
            </div>
            <div class="form-group">
                <label for="ApplicantImage">Applicant Image:</label>
                <input type="file" class="form-control-file" id="ApplicantImage" name="ApplicantImage" accept="image/*" required>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="HasExperience" name="HasExperience">
                    <label class="form-check-label" for="HasExperience">Has Experience</label>
                </div>
            </div>
            <div class="form-group" id="experienceMonths" style="display: none;">
                <label for="MonthsOfExperience">No of Months:</label>
                <input type="number" class="form-control" id="MonthsOfExperience" name="MonthsOfExperience">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <!-- Bootstrap JS and jQuery (required for Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // JavaScript to show/hide Months of Experience field
        const hasExperienceCheckbox = document.getElementById('HasExperience');
        const experienceMonthsField = document.getElementById('experienceMonths');

        hasExperienceCheckbox.addEventListener('change', function () {
            if (this.checked) {
                experienceMonthsField.style.display = 'block';
            } else {
                experienceMonthsField.style.display = 'none';
            }
        });
        function validateForm() {
            var fullName = document.getElementById('FullName').value;
            if (fullName.trim() === '') {
                document.getElementById('FullNameValidation').style.display = 'block';
                return false;
            } else {
                document.getElementById('FullNameValidation').style.display = 'none';
            }

            var dateOfBirth = document.getElementById('DateOfBirth').value;
            if (dateOfBirth.trim() === '') {
                document.getElementById('DateOfBirthValidation').style.display = 'block';
                return false;
            } else {
                document.getElementById('DateOfBirthValidation').style.display = 'none';
            }

            var genderSelected = document.querySelector('input[name="Gender"]:checked');
            if (genderSelected === null) {
                document.getElementById('GenderValidation').style.display = 'block';
                return false;
            } else {
                document.getElementById('GenderValidation').style.display = 'none';
            }
            return true;
        }
    </script>
</body>
</html>
